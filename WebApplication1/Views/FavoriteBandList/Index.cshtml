@model IEnumerable<WebApplication1.Models.FavoriteBandList>

@{
    ViewBag.Title = "My Favorite Bands";
}

<h2 style="text-align:center;">My Favorite Bands</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Band.BandName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Band.BandName, "Index", "FavoriteBandComments", new { bandId = item.Id}, null)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}


</table>
<button>
    @Html.ActionLink("Create New", "Create")
</button>
